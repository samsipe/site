.hide
    script(type="template")#posts_tmp
        .section
            span.date.pull-right <%= date %> 
            h2.title <%= title %>
            span.dot.pull-right
            h4.subtitle <%= subtitle %>
            hr
            p.content <%= content %>

    script(type="template")#about_tmp

        h2.greeting <%= greeting %>

        .section
            .about_me  
                <% for(var i in about_me) { %> 
                p <%= about_me[i] %> 
                <% } %> 
        hr
        .section.row
            .col-md-6
                h3 Objective
                p.objective <%= objective %>
            .col-md-6
                h3 Interests
                ul.interests
                    <% for(var i in interests) { %> 
                    li  <%= interests[i] %> 
                    <% } %> 
        hr        
        .section
            h3 Education
            .education
                <% for(var i in education) { %>
                .school

                    <% if(i!=0) { %> 
                    hr
                    <% } %>
                    .row
                        .col-md-6
                            h4.name <%= education[i].name %> 
                                span.location - <%= education[i].location  %> 
                            h5.major <%= education[i].major  %>
                            span.date <%= education[i].dates  %>
                        .col-md-6
                            <% for(var j in education[i].bullets) { %>
                            ul.bullets
                                li <%= education[i].bullets[j] %>
                            <% } %> 
                <% } %> 
        hr
        
    script(type="template")#projects_tmp
        .section
            span.date.pull-right <%= date %> 
            h3.title
                <% if(link != "") { %>
                a(href!="<%= link %>", target="_blank") <%= name %>
                <% } else { %>
                <%= name %>
                <% } %>
            span.dot.pull-right
            h4.subtitle <%= award %>
            h5.location <%= location %>
            p.content <%= info %>
            hr

    script(type="template")#resume_tmp
        .section
            span.date.pull-right <%= date %>
            h3.title <%= company %>
            span.dot.pull-right
            h4.subtitle <%= position %>
            h5.location <%= location %>
            p.content <%= info %>
            hr